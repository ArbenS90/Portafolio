---
const skills = [
  {
    category: 'Desarrollo Frontend',
    items: [
      { name: 'HTML/CSS', percentage: 95 },
      { name: 'JavaScript', percentage: 90 },
      { name: 'React', percentage: 85 },
      { name: 'Vue.js', percentage: 80 },
      { name: 'Astro', percentage: 88 }
    ]
  },
  {
    category: 'Desarrollo Backend',
    items: [
      { name: 'Node.js', percentage: 85 },
      { name: 'Python', percentage: 80 },
      { name: 'PHP', percentage: 75 },
      { name: 'MongoDB', percentage: 85 },
      { name: 'SQL', percentage: 80 }
    ]
  },
  {
    category: 'Diseño',
    items: [
      { name: 'UI/UX', percentage: 90 },
      { name: 'Figma', percentage: 85 },
      { name: 'Adobe XD', percentage: 80 },
      { name: 'Photoshop', percentage: 75 },
      { name: 'Illustrator', percentage: 70 }
    ]
  }
];
---

<section id="skills" class="section skills">
  <div class="container">
    <div class="section-header text-center">
      <h2>Mis Habilidades</h2>
      <div class="divider"></div>
      <p>Tecnologías y herramientas que utilizo para crear experiencias digitales excepcionales.</p>
    </div>
    
    <div class="skills-content">
      {skills.map(skillGroup => (
        <div class="skill-group">
          <h3>{skillGroup.category}</h3>
          <div class="skill-bars">
            {skillGroup.items.map(skill => (
              <div class="skill-item">
                <div class="skill-info">
                  <span class="skill-name">{skill.name}</span>
                  <span class="skill-percentage">{skill.percentage}%</span>
                </div>
                <div class="skill-bar">
                  <div class="skill-progress" style={`width: ${skill.percentage}%`}></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <div class="technologies">
      <div class="tech-header">
        <h3>Otras Tecnologías</h3>
      </div>
      <div class="tech-icons">
        <div class="tech-icon">
          <i class="fab fa-git-alt"></i>
          <span>Git</span>
        </div>
        <div class="tech-icon">
          <i class="fab fa-docker"></i>
          <span>Docker</span>
        </div>
        <div class="tech-icon">
          <i class="fab fa-aws"></i>
          <span>AWS</span>
        </div>
        <div class="tech-icon">
          <i class="fab fa-github"></i>
          <span>GitHub</span>
        </div>
        <div class="tech-icon">
          <i class="fab fa-npm"></i>
          <span>NPM</span>
        </div>
        <div class="tech-icon">
          <i class="fab fa-sass"></i>
          <span>Sass</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skills {
    background-color: var(--color-primary-dark);
  }
  
  .section-header p {
    color: var(--color-text-muted);
    max-width: 600px;
    margin: var(--space-md) auto 0;
  }
  
  .skills-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
    margin-bottom: var(--space-xl);
  }
  
  .skill-group h3 {
    margin-bottom: var(--space-md);
    position: relative;
    display: inline-block;
  }
  
  .skill-group h3::after {
    content: '';
    position: absolute;
    width: 50%;
    height: 2px;
    bottom: -5px;
    left: 0;
    background-color: var(--color-accent);
  }
  
  .skill-bars {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  
  .skill-info {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.25rem;
  }
  
  .skill-name {
    font-weight: 500;
  }
  
  .skill-percentage {
    color: var(--color-accent);
    font-weight: 600;
  }
  
  .skill-bar {
    height: 8px;
    background-color: var(--color-primary);
    border-radius: 10px;
    overflow: hidden;
  }
  
  .skill-progress {
    height: 100%;
    background: linear-gradient(to right, var(--color-accent-dark), var(--color-accent));
    border-radius: 10px;
    transition: width 1s ease-in-out;
  }
  
  .technologies {
    margin-top: var(--space-xl);
  }
  
  .tech-header {
    text-align: center;
    margin-bottom: var(--space-lg);
  }
  
  .tech-icons {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--space-lg);
  }
  
  .tech-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }
  
  .tech-icon i {
    font-size: 2.5rem;
    color: var(--color-accent);
    transition: var(--transition);
  }
  
  .tech-icon span {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }
  
  .tech-icon:hover i {
    transform: translateY(-5px);
  }
  
  /* Animation for skill bars */
  @keyframes progressAnimation {
    0% {
      width: 0;
    }
  }
  
  @media (max-width: 768px) {
    .skills-content {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Animate skill bars on scroll
  const observeSkills = () => {
    const skillSections = document.querySelectorAll('.skill-progress');
    
    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.animation = "progressAnimation 1s ease-out forwards";
        }
      });
    }, { threshold: 0.1 });
    
    skillSections.forEach(section => {
      observer.observe(section);
    });
  };

  // Run when the document loads
  document.addEventListener('DOMContentLoaded', observeSkills);
</script>
