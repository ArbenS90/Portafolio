<style>
  :root {
    --neon-color: #3b82f6; /* Color base del neón - debe coincidir con --color-accent */
    --neon-color-bright: #60a5fa; /* Versión más brillante */
    --neon-glow: 0 0 5px rgba(59, 130, 246, 0.8), 0 0 10px rgba(59, 130, 246, 0.5), 0 0 15px rgba(59, 130, 246, 0.3);
    --neon-flicker: 0 0 2px #fff, 0 0 4px #fff, 0 0 8px var(--neon-color), 0 0 12px var(--neon-color), 0 0 16px var(--neon-color);
  }

  .hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
  }
  
  .hero-content {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .hero-text {
    max-width: 100%;
    text-align: center;
  }
  
  .hero-text h1 {
    margin-bottom: 0.5rem;
    font-size: 3.5rem;
    line-height: 1.2;
  }
  
  .hero-text h2 {
    color: var(--color-accent);
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }
  
  .hero-text p {
    color: var(--color-text-muted);
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto 2rem;
  }
  
  /* Nuevo contenedor para envolver el nombre */
  .name-wrapper {
    width: 100%;
    margin-bottom: 1rem;
    overflow-x: visible;
  }
  
  /* Estilo para el nombre con efecto neón */
  .name-container {
    color: #3b82f6;
    position: relative;
    display: inline-block;
    white-space: nowrap;
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.2;
  }
  
  .name-container::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 8px;
    bottom: 5px;
    left: 0;
    background-color: #3b82f6;
    opacity: 0.3;
    z-index: -1;
  }
  
  .neon-letter {
    display: inline-block;
    position: relative;
    transition: all 0.15s ease-in-out;
    color: #3b82f6;
    font-weight: 600;
    padding: 0 2px;
    cursor: default; /* Para indicar que es interactivo */
  }
  
  .neon-letter:hover {
    color: #60a5fa;
    text-shadow: 
      0 0 2px #ffffff,
      0 0 4px #ffffff,
      0 0 8px #3b82f6,
      0 0 12px #3b82f6,
      0 0 16px #3b82f6,
      0 0 22px #3b82f6;
    animation: neonFlicker 1.5s ease-in-out infinite alternate;
    transform: scale(1.05);
  }
  
  @keyframes neonFlicker {
    0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
      text-shadow: 
        0 0 2px #ffffff,
        0 0 4px #ffffff,
        0 0 8px #3b82f6,
        0 0 12px #3b82f6,
        0 0 16px #3b82f6,
        0 0 22px #3b82f6;
    }
    20%, 24%, 55% {
      text-shadow: none;
    }
  }
  
  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
  
  /* Estilos personalizados para los botones del hero */
  .hero-buttons .btn {
    padding: 0.75rem 1.8rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    position: relative;
    overflow: hidden;
    z-index: 1;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .hero-buttons .btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }
  
  .hero-buttons .btn:active {
    transform: translateY(-1px);
  }
  
  .hero-buttons .btn-outline {
    background-color: transparent;
    border: 2px solid #3b82f6;
    color: #3b82f6;
  }
  
  .hero-buttons .btn-outline:hover {
    background-color: #3b82f6;
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(59, 130, 246, 0.3);
  }
  
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
  }
  
  .scroll-indicator a {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: var(--color-primary-light);
    color: var(--color-text);
    transition: var(--transition);
  }
  
  .scroll-indicator a:hover {
    background-color: var(--color-accent);
    transform: translateY(-5px);
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0) translateX(-50%);
    }
    40% {
      transform: translateY(-20px) translateX(-50%);
    }
    60% {
      transform: translateY(-10px) translateX(-50%);
    }
  }
  
  /* Responsive */
  @media (max-width: 992px) {
    .hero-text h1, .name-container {
      font-size: 2.5rem;
    }
  }
  
  @media (max-width: 768px) {
    .hero-text h1, .name-container {
      font-size: 2rem;
    }
  }
  
  @media (max-width: 480px) {
    .hero-text h1, .name-container {
      font-size: 1.8rem;
    }
  }
</style>
