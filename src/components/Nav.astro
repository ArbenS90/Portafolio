<!-- Navegación lateral izquierda (redes sociales) -->
<div class="nav-left">
  <div class="nav-left__line"></div>
  <div class="nav-left__social">
    <button class="nav-left__trigger" aria-label="Redes sociales">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92s2.92-1.31 2.92-2.92-1.31-2.92-2.92-2.92z"
          fill="currentColor"></path>
      </svg>
      <span class="nav-left__trigger-text">Social</span>
    </button>
    <div class="nav-left__links">
      {
        socialLinks.map((link) => (
          <a
            href={link.href}
            class="nav-left__link"
            aria-label={link.label}
            target="_blank"
            rel="noopener noreferrer"
            set:html={link.svg}
          />
        ))
      }
    </div>
  </div>
</div>

<!-- Navegación lateral derecha (menú) -->
<nav class="nav-right">
  {
    navLinks.map((link) => (
      <a href={link.href} class="nav-right__link">
        <span class="nav-right__subtitle">{link.subtitle}</span>
        <span class="nav-right__label">{link.label}</span>
      </a>
    ))
  }
</nav>

<!-- Status indicator -->
<div class="nav-status">
  <div class="nav-status__text">
    <span class="nav-status__title">SYSTEM STATUS</span>
    <span class="nav-status__value">Online & Available</span>
  </div>
  <div class="nav-status__dot"></div>
</div>

<!-- Menú móvil -->
<button class="nav-mobile-toggle" aria-label="Abrir menú">
  <span class="nav-mobile-toggle__bar"></span>
  <span class="nav-mobile-toggle__bar"></span>
  <span class="nav-mobile-toggle__bar"></span>
</button>

<div class="nav-mobile">
  <div class="nav-mobile__links">
    {
      navLinks.map((link) => (
        <a href={link.href} class="nav-mobile__link">
          {link.label}
        </a>
      ))
    }
  </div>
  <div class="nav-mobile__social">
    {
      socialLinks.map((link) => (
        <a
          href={link.href}
          class="nav-mobile__social-link"
          aria-label={link.label}
          target="_blank"
          rel="noopener noreferrer"
          set:html={link.svg}
        />
      ))
    }
  </div>
</div>

<style>
  /* Navegación izquierda */
  .nav-left {
    display: none;
    position: fixed;
    left: 1rem;
    bottom: 2rem;
    z-index: 100;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-left__line {
    width: 1px;
    height: 5rem;
    background: linear-gradient(to top, rgba(43, 108, 238, 0.5), transparent);
  }

  .nav-left__social {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .nav-left__trigger {
    width: 3rem;
    height: 3rem;
    padding: 0.5rem;

    background: transparent;
    color: var(--color-text-muted);
    transition:
      color var(--transition-fast),
      transform var(--transition-fast);
  }

  .nav-left__trigger:hover {
    color: var(--color-primary);
    transform: scale(1.1);
  }

  .nav-left__trigger svg {
    width: 100%;
    height: 100%;
  }

  .nav-left__links {
    position: absolute;
    bottom: 4rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: all var(--transition-normal);
  }

  .nav-left__social:hover .nav-left__links {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .nav-left__link {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--color-text-muted);
    transition:
      color var(--transition-fast),
      transform var(--transition-fast);
  }

  .nav-left__link:hover {
    color: var(--color-primary);
    transform: scale(1.3);
  }

  .nav-left__link svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  /* Navegación derecha */
  .nav-right {
    display: none;
    position: fixed;
    right: 3rem;
    top: 50%;
    transform: translateY(-50%);
    z-index: 100;
    flex-direction: column;
    align-items: flex-end;
    gap: 2.5rem;
  }

  .nav-right__link {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .nav-right__subtitle {
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    opacity: 0;
    transform: translateX(10px);
    transition: all var(--transition-fast);
  }

  .nav-right__label {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .nav-right__link:hover .nav-right__subtitle {
    opacity: 1;
    transform: translateX(0);
  }

  .nav-right__link:hover .nav-right__label {
    color: var(--color-primary);
  }

  /* Status indicator */
  .nav-status {
    display: none;
    position: fixed;
    right: 2rem;
    bottom: 2rem;
    z-index: 100;
    align-items: center;
    gap: 0.75rem;
  }

  .nav-status__text {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .nav-status__title {
    font-size: 0.75rem;
    font-weight: 500;
  }

  .nav-status__value {
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
  }

  .nav-status__dot {
    width: 0.5rem;
    height: 0.5rem;
    background-color: var(--color-primary);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.2);
    }
  }

  /* Menú móvil toggle */
  .nav-mobile-toggle {
    position: fixed;
    bottom: 1rem;
    left: 1rem;
    z-index: 101;
    width: 3rem;
    height: 3rem;
    background-color: var(--color-primary);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4px;
    box-shadow: 0 4px 20px rgba(43, 108, 238, 0.3);
  }

  .nav-mobile-toggle__bar {
    width: 18px;
    height: 2px;
    background-color: var(--color-text);
    transition: all var(--transition-fast);
  }

  .nav-mobile-toggle.active .nav-mobile-toggle__bar:nth-child(1) {
    transform: rotate(45deg) translate(4px, 4px);
  }

  .nav-mobile-toggle.active .nav-mobile-toggle__bar:nth-child(2) {
    opacity: 0;
  }

  .nav-mobile-toggle.active .nav-mobile-toggle__bar:nth-child(3) {
    transform: rotate(-45deg) translate(4px, -4px);
  }

  /* Menú móvil */
  .nav-mobile {
    position: fixed;
    inset: 0;
    z-index: 100;
    background-color: rgba(5, 5, 5, 0.98);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-normal);
  }

  .nav-mobile.active {
    opacity: 1;
    visibility: visible;
  }

  .nav-mobile__links {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-mobile__link {
    font-size: 1.5rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .nav-mobile__link:hover {
    color: var(--color-primary);
  }

  .nav-mobile__social {
    display: flex;
    gap: 1.5rem;
  }

  .nav-mobile__social-link {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .nav-mobile__social-link:hover {
    color: var(--color-primary);
  }

  .nav-mobile__social-link svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .nav-left,
    .nav-right,
    .nav-status {
      display: flex;
    }

    .nav-mobile-toggle,
    .nav-mobile {
      display: none !important;
    }
  }
</style>

<script>
  const toggle = document.querySelector(".nav-mobile-toggle");
  const mobileMenu = document.querySelector(".nav-mobile");
  const mobileLinks = document.querySelectorAll(".nav-mobile__link");

  toggle?.addEventListener("click", () => {
    toggle.classList.toggle("active");
    mobileMenu?.classList.toggle("active");
  });

  mobileLinks.forEach((link) => {
    link.addEventListener("click", () => {
      toggle?.classList.remove("active");
      mobileMenu?.classList.remove("active");
    });
  });
</script>
